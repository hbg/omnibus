{% macro text_field(title, placeholder="", value="") -%}
  {#
   # Create a fieldset containing a title and text input with the specified
   # value.
   #}
  <fieldset>
    <p>{{ title }}</p>
    <input type="text" name="{{ title.replace(' ', '_')|lower }}" placeholder="{{ placeholder }}" value="{{ value }}" />
  </fieldset>
{%- endmacro %}

{% macro submit_field(value, show_cancel=True) -%}
  {#
   # Create a fieldset containing a submit input with the specified value.
   # Optionally display a cancel button which just kicks the user back to the
   # previous page in their history.
   #}
  <fieldset>
    <p><!-- spacer --></p>
    <p>
      <input type="submit" value="{{ value }}" />
      {% if show_cancel %}
        <a href="javascript:history.back()" class="ml-6">Cancel</a>
      {% endif %}
    </p>
  </fieldset>
{%- endmacro %}
